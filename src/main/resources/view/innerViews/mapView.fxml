<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXListView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="300.0" prefWidth="500.0"
            style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="client.view.MapController">
    <JFXButton fx:id="selectButton" layoutX="60.0" layoutY="254.0" onAction="#selectClicked" prefHeight="32.0"
               prefWidth="80.0" style="-fx-background-color: orange;" text="Select" textFill="WHITE"
               visible="false">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </JFXButton>
    <JFXListView fx:id="mapsListView" layoutX="5.0" layoutY="5.0" prefHeight="230.0" prefWidth="190.0"/>
    <Pane layoutX="245.0" layoutY="45.0" prefHeight="210.0" prefWidth="210.0"
          style="-fx-background-color: lightgray; -fx-border-color: gray; -fx-border-width: 5;">
        <Label layoutX="84.0" layoutY="48.0" text="?" textFill="#515151">
            <font>
                <Font name="System Bold" size="72.0"/>
            </font>
        </Label>
        <ImageView fx:id="mapImageView" fitHeight="200.0" fitWidth="200.0" layoutX="5.0" layoutY="5.0"
                   pickOnBounds="true" preserveRatio="true"/>
    </Pane>
</AnchorPane>
