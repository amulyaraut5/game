    <Pane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: black; -fx-opacity: .5;"/>
    <Pane layoutX="81.0" layoutY="27.0" prefHeight="109.0" prefWidth="438.0"
          style="-fx-background-color: orange; -fx-background-radius: 10; -fx-border-radius: 5; -fx-border-color: orange; -fx-border-width: 5;">
        <Label id="label" alignment="CENTER" contentDisplay="CENTER" layoutX="25.0" layoutY="28.0"
               text="Welcome to Roborally" textFill="WHITE">
            <font>
                <Font name="System Bold" size="37.0"/>
            </font>
        </Label>
    </Pane>
    <Label fx:id="infoLabel" alignment="CENTER" layoutX="64.0" layoutY="207.0" prefHeight="27.0" prefWidth="473.0"
           textFill="RED">
        <font>
            <Font name="System Bold" size="18.0"/>
        </font>
        <effect>
            <DropShadow blurType="ONE_PASS_BOX" spread="0.45"/>
        </effect>
