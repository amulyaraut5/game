               prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: orange;" text="Host" textFill="WHITE">
        <font>
            <Font name="System Bold" size="16.0"/>
        </font>
    </JFXButton>
    <JFXButton buttonType="RAISED" layoutX="175.0" layoutY="316.0" onAction="#joinGameClicked"
               prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: orange;" text="Join" textFill="WHITE">
        <font>
            <Font name="System Bold" size="16.0"/>
        </font>
    </JFXButton>
