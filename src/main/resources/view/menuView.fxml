            prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="client.view.MenuController">
    <ImageView fitWidth="600.0" pickOnBounds="true" preserveRatio="true" style="-fx-opacity: 50;">
        <viewport>
            <Rectangle2D minX="600.0" minY="400.0" width="600.0"/>
        </viewport>
        <Image url="@../otherElements/menu.png"/>
