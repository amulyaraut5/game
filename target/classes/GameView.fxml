<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.view.GameViewController">
    <children>
        <HBox fx:id="Background" alignment="TOP_RIGHT" prefHeight="573.0" prefWidth="691.0">
            <children>
                <VBox prefHeight="529.0" prefWidth="272.0">
                    <children>
                        <VBox prefHeight="312.0" prefWidth="269.0">
                            <children>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="253.0" prefWidth="257.0">
                                    <children>
                                        <TextArea fx:id="userArea" editable="false" layoutX="183.0" prefHeight="242.0" prefWidth="82.0" text="Joined Users:">
                                            <font>
                                                <Font size="11.0" />
                                            </font>
                                        </TextArea>
                                        <ScrollPane layoutX="1.0" prefHeight="242.0" prefWidth="180.0">
                                            <padding>
                                                <Insets bottom="10.0" top="10.0" />
                                            </padding>
                                            <content>
                                                <TextArea fx:id="chatWindow" prefHeight="225.0" prefWidth="184.0" />
                                            </content>
                                        </ScrollPane>
                                    </children>
                                </AnchorPane>
                                <HBox prefHeight="33.0" prefWidth="269.0">
                                    <children>
                                        <TextArea fx:id="chatTextArea" prefHeight="200.0" prefWidth="200.0" promptText="Type in a message...">
                                            <HBox.margin>
                                                <Insets right="5.0" />
                                            </HBox.margin>
                                        </TextArea>
                                        <Button fx:id="submitButton" mnemonicParsing="false" onAction="#chatMessageHandling" prefHeight="41.0" prefWidth="68.0" text="Submit">
                                            <HBox.margin>
                                                <Insets />
                                            </HBox.margin>
                                            <font>
                                                <Font size="12.0" />
                                            </font>
                                        </Button>
                                    </children>
                                </HBox>
                            </children>
                            <VBox.margin>
                                <Insets bottom="5.0" left="5.0" />
                            </VBox.margin>
                            <padding>
                                <Insets bottom="5.0" />
                            </padding>
                        </VBox>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </children>
</AnchorPane>
